{
  "name": "@singlestone/sugar-tokens",
  "version": "0.0.0",
  "description": "Common design tokens used throughout Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "sugar/tokens"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/sugar/tokens#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "tsup",
    "prepublishOnly": "rm -rf ./package && clean-publish && delete-publishconfig-directory",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/tsup-config": "workspace:*",
    "@size-limit/preset-small-lib": "8.2.4",
    "@types/node": "18.11.18",
    "delete-publishconfig-directory": "1.0.0",
    "size-limit": "8.1.0",
    "tsup": "6.6.3",
    "vitest": "0.28.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "prettier": "@singlestone/prettier-config-sugar",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
