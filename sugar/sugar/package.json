{
  "name": "@singlestone/sugar",
  "version": "0.3.0",
  "description": "Core plugin for the sugar design system",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "sugar/sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/sugar/sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/sugar.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "tsup",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "dependencies": {
    "@singlestone/tailwind-helpers-sugar": "workspace:^0.3.0",
    "@singlestone/tailwind-plugin-buttons-sugar": "workspace:^0.3.0",
    "@singlestone/tailwind-plugin-form-sugar": "workspace:^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@singlestone/eslint-config-sugar": "workspace:^0.3.0",
    "@singlestone/prettier-config-sugar": "workspace:^0.3.0",
    "@singlestone/tsup-config-sugar": "workspace:^0.3.0",
    "@size-limit/preset-small-lib": "8.1.0",
    "size-limit": "8.1.0",
    "tsup": "6.5.0",
    "vitest": "0.26.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "size-limit": [
    {
      "path": "./dist/sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
