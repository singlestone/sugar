{
  "name": "@singlestone/storybook-sugar",
  "version": "0.5.2",
  "description": "Storybook for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "sugar/storybook"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/sugar/storybook#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "scripts": {
    "build": "pnpm run build:tailwindcss && pnpm run build:storybook",
    "build:storybook": "storybook build",
    "build:tailwindcss": "tailwind -i ./src/tailwind.css -o ./public/tailwind.css",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:storybook": "storybook dev -p 6006",
    "dev:tailwindcss": "tailwind -i ./src/tailwind.css -o ./public/tailwind.css --watch",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix"
  },
  "devDependencies": {
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/postcss-preset-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/sugar": "workspace:*",
    "@singlestone/tsup-config-node": "workspace:*",
    "@storybook/addon-essentials": "7.0.0-beta.41",
    "@storybook/addon-interactions": "7.0.0-beta.41",
    "@storybook/addon-links": "7.0.0-beta.41",
    "@storybook/blocks": "7.0.0-beta.41",
    "@storybook/html": "7.0.0-beta.41",
    "@storybook/html-vite": "7.0.0-beta.41",
    "@storybook/testing-library": "0.0.13",
    "autoprefixer": "10.4.13",
    "postcss": "8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.0.0-beta.41",
    "tailwindcss": "3.2.4",
    "vite": "4.1.1"
  },
  "prettier": "@singlestone/prettier-config-sugar"
}
