{
  "name": "@singlestone/test-utils-sugar",
  "version": "0.5.1",
  "description": "Utilities for testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/test-utils"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/test-utils#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {
    "vitest": "^0.26.0 || ^0.28.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/tsup-config-node": "workspace:*",
    "@size-limit/preset-small-lib": "8.1.2",
    "size-limit": "8.1.2",
    "tsup": "6.5.0",
    "vitest": "0.28.3"
  },
  "prettier": "@singlestone/prettier-config-sugar",
  "size-limit": [
    {
      "path": "./dist/test-utils.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/test-utils.esm.js",
      "limit": "10 KB"
    }
  ]
}
