{
  "name": "@singlestone/prettier-config-sugar",
  "version": "0.2.1",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/prettier-config-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/prettier-config-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "main": "./dist/index.js",
  "module": "./dist/prettier-config-sugar.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "dts watch --noClean --verbose",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "test": "dts test --passWithNoTests",
    "test:ci": "dts test --passWithNoTests"
  },
  "peerDependencies": {
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@singlestone/prettier-plugin-organize-imports-tailwindcss": "workspace:^",
    "prettier-plugin-pkg": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@singlestone/eslint-config-sugar": "workspace:^",
    "@size-limit/preset-small-lib": "7.0.8",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.45",
    "@types/prettier": "2.6.3",
    "babel-jest": "27.5.1",
    "dts-cli": "1.5.2",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "size-limit": "7.0.8",
    "ts-jest": "27.1.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/prettier-config-sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/prettier-config-sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
