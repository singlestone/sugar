{
  "name": "@singlestone/prettier-config-sugar",
  "version": "0.2.1",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/prettier-config-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/prettier-config-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "main": "./dist/index.js",
  "module": "./dist/prettier-config-sugar.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch --noClean --verbose",
    "lint": "eslint src test",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests"
  },
  "peerDependencies": {
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@singlestone/prettier-plugin-organize-imports-tailwindcss": "workspace:^0.2.1",
    "prettier-plugin-pkg": "^0.17.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@singlestone/eslint-config-sugar": "workspace:^0.2.1",
    "@singlestone/tsup-config-sugar": "workspace:^0.0.0-development",
    "@size-limit/preset-small-lib": "8.1.0",
    "@types/jest": "29.2.2",
    "@types/node": "16.18.3",
    "@types/prettier": "2.7.1",
    "babel-jest": "29.3.1",
    "eslint": "8.27.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-watch-typeahead": "2.2.0",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.2.0",
    "size-limit": "8.1.0",
    "ts-jest": "29.0.3",
    "tsup": "6.5.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/prettier-config-sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/prettier-config-sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
