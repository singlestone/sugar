{
  "name": "@singlestone/eslint-config-sugar",
  "version": "0.3.0",
  "description": "eslint config for Sugar, SingleStone&#x27;s sweet design system",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/eslint-config-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/eslint-config-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./index.js",
  "files": [
    "index.js",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf .turbo node_modules",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepublishOnly": "rm -rf ./package && clean-publish"
  },
  "peerDependencies": {
    "eslint": "^8.21.0",
    "typescript": "^4.7.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint-plugin-simple-import-sort": "8.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@singlestone/tsup-config-sugar": "workspace:^0.3.0",
    "@size-limit/preset-small-lib": "8.1.0",
    "eslint": "8.31.0",
    "prettier": "2.8.1",
    "prettier-plugin-pkg": "0.17.1",
    "size-limit": "8.1.0",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}
