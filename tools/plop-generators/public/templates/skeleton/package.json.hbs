{
  "name": "@singlestone/{{kebabCase packageName}}-sugar",
  "version": "0.0.0",
  "description": "{{packageDescription}}",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "{{packageType}}/{{kebabCase packageName}}"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/{{packageType}}/{{kebabCase packageName}}#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/{{kebabCase packageName}}-sugar.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "postpublish": "rm -rf ./package"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@singlestone/tsup-config-sugar": "workspace:^",
    "tsup": "6.5.0",
    "@babel/core": "7.20.5",
    "@singlestone/prettier-config-sugar": "workspace:^",
    "@size-limit/preset-small-lib": "8.1.0",
    "babel-jest": "29.3.1",
    "size-limit": "8.1.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "size-limit": [
    {
      "path": "./dist/{{kebabCase packageName}}.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/{{kebabCase packageName}}.esm.js",
      "limit": "10 KB"
    }
  ]
}
