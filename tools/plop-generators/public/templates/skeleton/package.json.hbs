{
  "name": "@singlestone/sugar-{{kebabCase packageName}}",
  "version": "0.0.0",
  "description": "{{packageDescription}}",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "{{packageType}}/{{kebabCase packageName}}"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/{{packageType}}/{{kebabCase packageName}}#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^14 || ^16 || ^18 || >= 20"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo dist",
    "lint": "eslint --format stylish --max-warnings 0 --cache src && prettier -c src",
    "lint:fix": "eslint --format stylish --max-warnings 0 --cache --fix src && prettier --write src",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/tsup-config": "workspace:*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package",
    "linkDirectory": false
  },
  "prettier": "@singlestone/prettier-config-sugar",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
