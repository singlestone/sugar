{
  "name": "@singlestone/plop-generators-sugar",
  "version": "0.5.2",
  "description": "Plop generators config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/plop-generators-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/plop-generators-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup --publicDir",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "tsup --publicDir",
    "prepublishOnly": "rm -rf ./package && clean-publish && sugar prepublish",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {
    "node-plop": "~0.30.0 || ~0.31.0",
    "plop": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/sugar-cli": "workspace:*",
    "@singlestone/tsup-config-node": "workspace:*",
    "@size-limit/preset-small-lib": "8.1.2",
    "cpy-cli": "4.2.0",
    "eslint": "8.33.0",
    "node-plop": "0.31.0",
    "plop": "3.1.1",
    "size-limit": "8.1.2",
    "tsup": "6.5.0",
    "typescript": "4.9.5",
    "vitest": "0.28.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "prettier": "@singlestone/prettier-config-sugar",
  "size-limit": [
    {
      "path": "./dist/plop-generators-sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/plop-generators-sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
