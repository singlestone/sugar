{
  "name": "@singlestone/prettier-config-sugar",
  "version": "0.4.1",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/prettier-config-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/prettier-config-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "tsup",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "prettier-plugin-pkg": "^0.17.1",
    "prettier-plugin-tailwindcss": "^0.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/tsup-config-node": "workspace:*",
    "@size-limit/preset-small-lib": "8.1.2",
    "@types/node": "18.11.18",
    "@types/prettier": "2.7.2",
    "eslint": "8.31.0",
    "prettier": "2.8.2",
    "size-limit": "8.1.2",
    "tsup": "6.5.0",
    "typescript": "4.9.4",
    "vitest": "0.28.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/prettier-config-sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/prettier-config-sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
