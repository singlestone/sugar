  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "main": "./dist/index.js",
  "module": "./dist/prettier-plugin-organize-imports-tailwindcss.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch --noClean --verbose",
    "lint": "eslint src test",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests"
  },
  "peerDependencies": {
    "prettier": "^2.5.0",
    "prettier-plugin-tailwindcss": "^0.1.0",
    "typescript": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@singlestone/eslint-config-sugar": "workspace:^",
    "@singlestone/tsup-config-sugar": "workspace:^",
    "@size-limit/preset-small-lib": "8.0.0",
    "@types/jest": "28.1.6",
    "@types/node": "16.11.45",
    "@types/prettier": "2.7.0",
    "babel-jest": "28.1.3",
    "eslint": "8.21.0",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "jest-watch-typeahead": "2.1.1",
    "postcss": "8.4.16",
    "postcss-load-config": "4.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.0.3",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "size-limit": "8.0.0",
    "ts-jest": "28.0.7",
    "tsup": "5.12.7",
    "typescript": "4.7.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/prettier-plugin-organize-imports-tailwindcss.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/prettier-plugin-organize-imports-tailwindcss.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
