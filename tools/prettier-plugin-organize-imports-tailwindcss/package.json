{
  "name": "@singlestone/prettier-plugin-organize-imports-tailwindcss",
  "version": "0.2.1",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/prettier-plugin-organize-imports-tailwindcss"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/prettier-plugin-organize-imports-tailwindcss#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
