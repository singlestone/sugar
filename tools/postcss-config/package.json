{
  "name": "@singlestone/postcss-preset-sugar",
  "version": "0.6.2",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/postcss-preset-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/postcss-preset-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo dist",
    "dev": "tsup --watch",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "tsup",
    "size": "size-limit",
    "test": "vitest",
    "test:ci": "vitest"
  },
  "peerDependencies": {
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1 || ^4.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@singlestone/eslint-config-sugar": "workspace:*",
    "@singlestone/prettier-config-sugar": "workspace:*",
    "@singlestone/tsup-config": "workspace:*",
    "@size-limit/preset-small-lib": "8.2.4",
    "@types/node": "18.15.11",
    "@types/postcss-import": "14.0.0",
    "eslint": "8.37.0",
    "postcss": "8.4.21",
    "postcss-load-config": "4.0.1",
    "size-limit": "8.2.4",
    "tsup": "6.7.0",
    "typescript": "4.9.5",
    "vitest": "0.29.8"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "prettier": "@singlestone/prettier-config-sugar",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
