{
  "name": "@singlestone/postcss-preset-sugar",
  "version": "0.3.0",
  "description": "PostCSS config for Sugar",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "tools/postcss-preset-sugar"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/tools/postcss-preset-sugar#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || >= 18"
  },
  "main": "./dist/index.js",
  "module": "./dist/postcss-preset-sugar.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch --noClean --verbose",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "postpublish": "rm -rf ./package",
    "prepare": "tsup",
    "prepublishOnly": "rm -rf ./package && clean-publish",
    "size": "size-limit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --passWithNoTests"
  },
  "peerDependencies": {
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1 || ^4.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@singlestone/eslint-config-sugar": "workspace:^0.3.0",
    "@singlestone/prettier-config-sugar": "workspace:^0.3.0",
    "@singlestone/tsup-config-sugar": "workspace:^0.3.0",
    "@size-limit/preset-small-lib": "8.1.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/postcss-import": "14.0.0",
    "babel-jest": "29.3.1",
    "eslint": "8.31.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-watch-typeahead": "2.2.1",
    "postcss": "8.4.20",
    "postcss-load-config": "4.0.1",
    "size-limit": "8.1.0",
    "ts-jest": "29.0.3",
    "tsup": "6.5.0",
    "typescript": "4.9.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "directory": "package"
  },
  "size-limit": [
    {
      "path": "./dist/postcss-preset-sugar.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/postcss-preset-sugar.esm.js",
      "limit": "10 KB"
    }
  ],
  "volta": {
    "extends": "../../package.json"
  }
}
