{
  "name": "@singlestone/{{packageName}}",
  "version": "0.0.0",
  "description": "{{packageDescription}}",
  "repository": {
    "type": "git",
    "url": "https://github.com/singlestone/sugar.git",
    "directory": "{{packageType}}/{{packageName}}"
  },
  "homepage": "https://github.com/singlestone/sugar/tree/main/{{packageType}}/{{packageName}}#readme",
  "bugs": {
    "url": "https://github.com/singlestone/sugar/issues"
  },
  "author": "SingleStone Consulting (https://www.singlestoneconsulting.com/)",
  "license": "MIT",
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "main": "./dist/index.js",
  "module": "./dist/{{packageName}}.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "test": "dts test --passWithNoTests",
    "test:ci": "dts test --passWithNoTests"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@singlestone/prettier-config-sugar": "workspace:^",
    "@size-limit/preset-small-lib": "7.0.8",
    "babel-jest": "27.5.1",
    "dts-cli": "1.5.2",
    "size-limit": "7.0.8"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "size-limit": [
    {
      "path": "./dist/{{packageName}}.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/{{packageName}}.esm.js",
      "limit": "10 KB"
    }
  ]
}
