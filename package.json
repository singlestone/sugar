{
  "name": "@singlestone/sugar-monorepo",
  "version": "0.0.0",
  "description": "SingleStone's sweet design system.",
  "private": true,
  "workspaces": {
    "packages": [
      "spice/*",
      "sugar/*",
      "tools/*"
    ]
  },
  "packageManager": "pnpm@7.9.0",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "build:changed": "turbo run build --since=origin/main",
    "build:presets": "turbo run build --no-deps --include-dependencies --scope=*preset*",
    "changeset": "changeset",
    "clean": "turbo run clean && rimraf node_modules",
    "deploy-storybook": "storybook-to-ghpages --packages packages",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:changed": "turbo run dev --no-cache --parallel --continue --since=origin/main",
    "dev:presets": "turbo run dev --no-cache --parallel --continue --no-deps --include-dependencies --scope=*preset*",
    "doctoc": "doctoc .",
    "generate": "plop",
    "lint": "turbo run lint",
    "lint:changed": "turbo run lint --since=origin/main",
    "postinstall": "is-ci || husky install && nr build",
    "release": "pnpm build && changeset publish",
    "storybook": "turbo run storybook --no-cache --parallel --continue",
    "test": "turbo run test",
    "test-storybook": "turbo run test-storybook",
    "test-storybook:changed": "turbo run test-storybook --since=origin/main",
    "test-storybook:ci": "turbo run test-storybook:ci --concurrency=1",
    "test-storybook:ci:changed": "turbo run test-storybook:ci --concurrency=1 --since=origin/main",
    "test:changed": "turbo run test --since=origin/main",
    "test:ci": "turbo run test:ci",
    "test:ci:changed": "turbo run test:ci --since=origin/main"
  },
  "devDependencies": {
    "@antfu/ni": "0.17.2",
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.23.0",
    "@singlestone/prettier-config-sugar": "workspace:^",
    "@storybook/storybook-deployer": "2.8.11",
    "@tsconfig/create-react-app": "1.0.2",
    "@tsconfig/node12": "1.0.11",
    "doctoc": "2.2.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "plop": "3.1.1",
    "postinstall-postinstall": "2.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-pkg": "0.14.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "jest": "^27.0.0",
    "ts-jest": "27.1.5",
    "turbo": "1.3.4",
    "typescript": "4.7.4"
  },
  "storybook-deployer": {
    "commitMessage": "chore: deploy storybook"
  },
  "style": "dist/index.min.css",
  "volta": {
    "node": "16.16.0",
    "npm": "8.15.0"
  }
}
