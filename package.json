{
  "name": "@singlestone/sugar",
  "version": "0.3.0",
  "description": "SingleStone's sweet design system.",
  "packageManager": "pnpm@7.22.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "nr build:library && nr build:storybook",
    "build:library": "tsup",
    "build:storybook": "storybook build",
    "changeset": "changeset",
    "clean": "rimraf node_modules",
    "coverage": "vitest --coverage",
    "dev": "npm-run-all --parallel dev:*",
    "dev:library": "tsup --watch",
    "dev:storybook": "storybook dev -p 6006",
    "doctoc": "doctoc .",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "is-ci || (tsx ./scripts/make-husky-executable.mts && husky install)",
    "release": "pnpm build && changeset publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "tailwindcss": "^3.2.0"
  },
  "devDependencies": {
    "@antfu/ni": "0.18.8",
    "@babel/core": "7.20.12",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@storybook/addon-essentials": "7.0.0-beta.19",
    "@storybook/addon-interactions": "7.0.0-beta.19",
    "@storybook/addon-links": "7.0.0-beta.19",
    "@storybook/blocks": "7.0.0-beta.19",
    "@storybook/html": "7.0.0-beta.19",
    "@storybook/html-vite": "7.0.0-beta.19",
    "@storybook/testing-library": "0.0.13",
    "@tsconfig/node14": "1.0.3",
    "@tsconfig/vite-react": "1.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "@vitest/coverage-c8": "0.26.3",
    "autoprefixer": "10.4.13",
    "clean-publish": "4.0.2",
    "cssnano": "5.1.14",
    "doctoc": "2.2.1",
    "eslint": "8.31.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.0",
    "npm-run-all": "^4.1.5",
    "plop": "3.1.1",
    "postcss": "8.4.20",
    "prettier": "2.8.1",
    "prettier-plugin-pkg": "0.17.1",
    "pretty-quick": "3.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "3.0.2",
    "storybook": "7.0.0-beta.19",
    "tailwindcss": "3.2.4",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "tsx": "3.12.1",
    "turbo": "1.6.3",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.26.3"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "9.2.0"
  }
}
